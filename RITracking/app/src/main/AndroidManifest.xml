<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.rocketinternet.android.tracking" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <meta-data
        android:name="com.google.android.gms.version"
        android:value="@integer/google_play_services_version" />

    <!-- ########## Ad4Push ########## -->
    <!-- #### Change your pkg name ### -->
    <permission
        android:name="your-package.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="your-package.permission.C2D_MESSAGE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <!-- ############################# -->

    <application
        android:name=".core.RITrackingApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--  Add Activity to listen for deep-links. The activity should extend RIDeepLinkingActivity
              and here it is possible to declare the data patterns to be intercepted -->
        <activity
            android:name="de.rocketinternet.android.tracking.RIDeepLinkingActivity"
            android:label="@string/app_name" >
            <intent-filter >
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Accepts URIs that begin with "example://gizmos” -->
                <data
                    android:host="gizmos"
                    android:scheme="example" />
                <!-- Accepts URIs that begin with "http://www.example.com/gizmos” -->
                <data
                    android:host="www.example.com"
                    android:pathPrefix="/gizmos"
                    android:scheme="http" />
            </intent-filter>
        </activity>

        <!-- ############################## -->
        <!-- ########## TRACKERS ########## -->
        <!-- ############################## -->

        <!-- ########## GOOGLE TAG MANAGER ########## -->
        <!--  Add preview activity for Google Tag Manager -->
        <activity
            android:name="com.google.android.gms.tagmanager.PreviewActivity"
            android:label="@string/app_name"
            android:noHistory="true">  <!-- optional, removes the previewActivity from the activity stack. -->
            <intent-filter>
                <!-- #### Change your pkg name ### -->
                <!--<data android:scheme="tagmanager.c.your.application.packagename" />-->
                <data android:scheme="tagmanager.c.de.rocketinternet.android.tracking" />
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE"/>
            </intent-filter>
        </activity>

        <!-- Used for install referrer tracking-->
        <service android:name="com.google.android.gms.tagmanager.InstallReferrerService"/>
        <receiver
            android:name="com.google.android.gms.tagmanager.InstallReferrerReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER" />
            </intent-filter>
        </receiver>

        <!-- ########## AD4PUSH ########## -->
        <!-- Ad4Push service -->
        <service
            android:name="com.ad4screen.sdk.A4SService"
            android:label="A4S Service"
            android:process=":A4SService">

            <!-- Use your partner id -->
            <meta-data
                android:name="com.ad4screen.partnerid"
                android:value="YOUR.PARTNER.ID" />
            <!-- Use your private key -->
            <meta-data
                android:name="com.ad4screen.privatekey"
                android:value="YOUR.PRIVATE.KEY" />
            <!-- Use your sender id -->
            <meta-data
                android:name="com.ad4screen.senderid"
                android:value="gcm:yoursenderid" />
            <!-- Uncomment this if you don't want to use SDK built-in geolocation -->
            <!--<meta-data
                android:name="com.ad4screen.no_geoloc"
                android:value="true" /> -->
            <!-- Uncomment this if you want to track Facebook app -->
            <!--<meta-data
                android:name="com.ad4screen.facebook_appid"
                android:value="fb:yourfacebookid" />  -->
        </service>

        <receiver
            android:name="com.ad4screen.sdk.A4SIDFVHandler"
            android:exported="true">
            <intent-filter>
                <action android:name="com.ad4screen.sdk.intent.action.QUERY" />
                <category android:name="com.ad4screen.sdk.intent.category.ANONYM_ID" />
            </intent-filter>
        </receiver>

        <receiver
            android:name="com.ad4screen.sdk.ReferrerHandler"
            android:exported="true">
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER" />
            </intent-filter>
        </receiver>

        <!-- Use your partner id -->
        <receiver
            android:name="com.ad4screen.sdk.GCMHandler"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="your-package" />
            </intent-filter>
        </receiver>

        <activity
            android:name="com.ad4screen.sdk.A4SPopup"
            android:taskAffinity=""
            android:theme="@style/com_ad4screen_sdk_theme_popup" />
        <activity
            android:name="com.ad4screen.sdk.A4SInterstitial"
            android:theme="@style/com_ad4screen_sdk_theme_interstitial" />
    </application>
</manifest>
